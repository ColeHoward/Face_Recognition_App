            multiline: False
            pos_hint: {"x": 0.34, "top":0.75}
            size_hint: 0.35, 0.05

        Label:
            font_size: '20sp'
            pos_hint:{"x": -.15, "top":0.7}
            size_hint:0.8, 0.05
            text: "Email: "

        TextInput:
            id: email
            font_size: '20sp'
            multiline: False
            pos_hint: {"x": 0.34, "top":0.7}
            size_hint: 0.35, 0.05

        Label:
            font_size: '20sp'
            pos_hint:{"x": -.15, "top":0.65}
            size_hint:0.8, 0.05
            text: "Gender: "

        TextInput:
            id: gender
            font_size: '20sp'
            multiline: False
            pos_hint: {"x": 0.34, "top":0.65}

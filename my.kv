<CreateAccountWindow>:
    name: "create"

    username: username
    password: password
    confirmPassword: confirmPassword

    FloatLayout:
        cols:1

        FloatLayout:
            size: root.width, root.height

            Label:
                pos_hint: {"x":0.4, "top":1}
                text: "Create an Account"
                size_hint: 0.2, 0.2
                font_size: '20sp'

            Label:
                pos_hint: {"x":.09, "top":0.7}
                size_hint: 0.35, 0.05
                text: "Username: "
                font_size: '20sp'

            TextInput:
                pos_hint: {"x":0.33, "top":0.7}
                size_hint: 0.35, 0.05
                id: username
                multiline: False
                font_size: '20sp'

            Label:
                pos_hint: {"x": .09, "top": .65}
                size_hint: 0.35, 0.05
                text: "Password: "
                font_size: '20sp'

            TextInput:
                pos_hint: {"x":0.33, "top":0.65}
                size_hint: 0.35, 0.05
                multiline: False
                id: password
                password: True
                font_size: '20sp'

            Label:
                pos_hint: {"x":.04, "top":0.6}
                size_hint: 0.35, 0.05
                text: "Confirm Password: "
                font_size: '20sp'

            TextInput:
                pos_hint: {"x":0.33, "top":0.6}
                size_hint: 0.35, 0.05
                id: confirmPassword
                password: True
                font_size: '20sp'
                multiline: False

        Button:
            pos_hint: {"x":0.33, "top":0.8}
            size_hint: 0.35, 0.05
            font_size: '18sp'
            text: "Already have an Account? Log In"
            on_release:
                root.manager.transition.direction = "left"
                root.login()

        Button:
            pos_hint: {"x":0.33, "top":0.3}
            size_hint: 0.35, 0.05
            text: "Submit"
            font_size: '20sp'
            on_release:
                root.manager.transition.direction = "left"
                root.submit()



<LoginWindow>:
    name: "login"
    username: username
    password: password
    # img_url: img_url

    FloatLayout:

        Label:
            text:"Username: "
            font_size: '20sp'
            pos_hint: {"x":.09, "top":0.7}
            size_hint: 0.35, 0.05

        TextInput:
            id: username
            font_size: '20sp'
            multiline: False
            pos_hint: {"x":.33, "top":0.7}
            size_hint: 0.35, 0.05

        Label:
            text:"Password: "
            font_size: '20sp'
            pos_hint: {"x":.09, "top":0.65}
            size_hint: 0.35, 0.05

        TextInput:
            id: password
            font_size: '20sp'
            multiline: False
            password: True
            pos_hint: {"x": 0.33, "top":0.65}
            size_hint: 0.35, 0.05

        Button:
            pos_hint:{"x":0.33,"y":0.48}
            size_hint: 0.35, 0.05
            font_size: '20sp'
            text: "Login"
            on_release:
                root.manager.transition.direction = "up"
                root.loginBtn()

        Button:
            pos_hint:{"x":0.28,"y":0.38}
            size_hint: 0.45, 0.05
            font_size: '20sp'
            text: "Don't have an Account? Create One"
            on_release:
                root.manager.transition.direction = "right"
                root.createBtn()


<UserWindow>:
    name: "user"
    full_name: name
    email: email
    username: username
    gender: gender
    image: image

    FloatLayout:

        Image:
            id: image
            source: " "
            size_hint_x: .4
            size_hint_y: .5
            pos_hint: {"center_x": .5, "center_y": .7}
            allow_stretch: True

        Label:
            id: username
            pos_hint:{"x": 0.1, "top":0.45}
            size_hint: .8, 0.05
            text: "Username: "

        Label:
            id: name
            pos_hint:{"x": 0.1, "top":0.4}
            size_hint:0.8, 0.05
            text: "Name: "

        Label:
            id: email
            pos_hint:{"x": 0.1, "top":0.35}
            size_hint:0.8, 0.05
            text: "Email: "

        Label:
            id: gender
            pos_hint:{"x": 0.1, "top":0.3}
            size_hint:0.8, 0.05
            text: "Gender: "

        Button:
            pos_hint:{"x":0.3, "y": 0.1}
            size_hint:0.4,0.1
            text: "Back"
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "down"


<MainWindow>:
    name: "main"
    # addImage: addImage
    searchImage: searchImage
    FloatLayout:

        Label:
            text: "Search Person: "
            font_size: '20sp'
            pos_hint: {"x":.05, "top":0.65}
            size_hint: 0.35, 0.05

        TextInput:
            id: searchImage
            font_size: '20sp'
            multiline: False
            pos_hint: {"x": 0.33, "top":0.65}
            size_hint: 0.35, 0.05

        Button:
            pos_hint:{"x":0.7, "top": 0.65}
            size_hint: 0.2,0.05
            text: "Search"
            on_release:
                root.searchPerson()
                app.root.current = "user"
                root.manager.transition.direction = "down"

        Button:
            text: "Add new User"
            size_hint: .24, .075
            pos_hint: {"x": .4, "y": .27}
            on_release:
                app.root.current = "addUser"
                root.manager.transition.direction = "up"

        Button:
            pos_hint:{"x":0.3, "y": 0.1}
            size_hint: 0.44, 0.1
            text: "Log Out"
            on_release:
                app.root.current = "login"
                root.manager.transition.direction = "down"


<AddUserWindow>
